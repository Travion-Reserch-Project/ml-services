# Transport Service Environment Configuration

# =============================================================================
# MLOPS CONFIGURATION (DagsHub MLflow + DVC)
# =============================================================================

# Model source: "mlflow" (DagsHub), "dvc", "github_release" (fallback), or "url"
MODEL_SOURCE=mlflow

# DagsHub MLflow Configuration
MLFLOW_TRACKING_URI=https://dagshub.com/YOUR_USERNAME/ml-services.mlflow
MLFLOW_TRACKING_USERNAME=YOUR_DAGSHUB_USERNAME
MLFLOW_TRACKING_PASSWORD=YOUR_DAGSHUB_TOKEN

# Model Registry Settings
# For MLflow: Use registered model name and stage
MODEL_NAME=transport-gnn-model
MODEL_STAGE=Production  # or "Staging", "Development"
MODEL_VERSION=  # Optional: specific version number (e.g., "3")

# DVC Configuration (for direct file downloads)
# DVC_REMOTE=dagshub
# DVC_CACHE_DIR=/app/.dvc/cache

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
PYTHON_ENV=production
PORT=8001
WORKERS=1

# Logging
LOG_LEVEL=INFO

# =============================================================================
# FALLBACK: GitHub Release Configuration (if not using DagsHub)
# =============================================================================

# Uncomment if using GitHub Releases as fallback
# MODEL_SOURCE=github_release
# MODEL_REPO=Travion-Reserch-Project/ml-services
# MODEL_RELEASE_TAG=latest

# Model cache directory (where models are downloaded to)
MODEL_CACHE_DIR=/app/model

# Force re-download models on every startup (default: false)
FORCE_MODEL_DOWNLOAD=false

# Skip model download for local development (use local models)
SKIP_MODEL_DOWNLOAD=false

# =============================================================================
# NLP CONFIGURATION
# =============================================================================
USE_BERT=true
SPACY_MODEL=en_core_web_sm

