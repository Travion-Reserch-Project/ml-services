# Transport Service Environment Configuration

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
PYTHON_ENV=production
PORT=8001
WORKERS=1

# Logging
LOG_LEVEL=INFO

# =============================================================================
# MODEL STORAGE CONFIGURATION (NEW - for external model storage)
# =============================================================================

# Model download source: "github_release" (default), "s3", "gcs", "azure", or "url"
MODEL_SOURCE=github_release

# GitHub Release Configuration (Recommended - Simple & Free)
MODEL_REPO=Travion-Reserch-Project/ml-services
MODEL_RELEASE_TAG=latest
# GITHUB_TOKEN=  # Optional: only needed for private repos

# Model cache directory (where models are downloaded to)
MODEL_CACHE_DIR=/app/model

# Force re-download models on every startup (default: false)
FORCE_MODEL_DOWNLOAD=false

# Skip model download for local development (use local models)
SKIP_MODEL_DOWNLOAD=false

# =============================================================================
# ALTERNATIVE STORAGE OPTIONS (Advanced)
# =============================================================================

# Option 1: Direct URLs
# MODEL_SOURCE=url
# GNN_MODEL_URL=https://example.com/transport_gnn_model.pth
# RISK_MODEL_URL=https://example.com/risk_model.pkl

# Option 2: AWS S3
# MODEL_SOURCE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=travion-ml-models
# S3_MODEL_PREFIX=transport-service/

# Option 3: Google Cloud Storage
# MODEL_SOURCE=gcs
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BUCKET=travion-ml-models
# GCS_MODEL_PREFIX=transport-service/

# Option 4: Azure Blob Storage
# MODEL_SOURCE=azure
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER=ml-models
# AZURE_MODEL_PREFIX=transport-service/

# =============================================================================
# NLP CONFIGURATION
# =============================================================================
USE_BERT=true
SPACY_MODEL=en_core_web_sm

